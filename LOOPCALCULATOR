<body>
  <div class="container">
  <h1>Loop Calculation</h1>
  <label for="number">Enter a number:</label>
  <input type="number" id="number">
  <br><br>
  <button onclick="calculate()">Calculate</button>
  <div class="result">
    <p id="factorial"></p>
    <p id="sum"></p>
    <p id="average"></p>

  </div>
    <script>
        function calculate() {
      var number = parseInt(document.getElementById("number").value);
      var factorial = 1;
      var sum = 0;

      var i = 1;
      while (i <= number) {
        factorial *= i;
        sum += i;
        i++;
      }

      var average = sum / number;

      document.getElementById("factorial").innerHTML = "Factorial: " + factorial;
      document.getElementById("sum").innerHTML = "Sum: " + sum;
      document.getElementById("average").innerHTML = "Average: " + average;
    }
  
        </script>
  
